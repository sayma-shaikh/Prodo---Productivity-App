<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Prodo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Add these if your main theme is Theme.Prodo and it doesn't have .NoActionBar -->
        <!-- <item name="windowActionBar">false</item> -->
        <!-- <item name="windowNoTitle">true</item> -->
    </style>

    <!-- AppBarOverlay: Used for the AppBarLayout theme -->
    <style name="Theme.Prodo.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <!-- You might use Theme.MaterialComponents.Light.DarkActionBar if your main theme is Light -->
    <!-- Or parent="ThemeOverlay.AppCompat.Dark.ActionBar" if not heavily using Material theming for Toolbar -->


    <!-- PopupOverlay: Used for the Toolbar's popup theme (e.g., for overflow menu) -->
    <style name="Theme.Prodo.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <!-- Or parent="ThemeOverlay.AppCompat.Light" -->


