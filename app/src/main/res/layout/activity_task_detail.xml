<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tasks.TaskDetailActivity">

    <!-- Fixed App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Prodo"
        android:titleTextColor="@android:color/white"
        app:titleCentered="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Title Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_detail_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:inputType="textCapSentences"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Note Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_detail_note"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Note"
                app:layout_constraintTop_toBottomOf="@id/layout_detail_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_detail_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Status -->
            <TextView
                android:id="@+id/text_detail_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Status:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/layout_detail_note"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_detail_status_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Pending"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/text_detail_status_label"
                app:layout_constraintBottom_toBottomOf="@id/text_detail_status_label"
                app:layout_constraintStart_toEndOf="@id/text_detail_status_label"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Date -->
            <TextView
                android:id="@+id/text_detail_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Date:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/text_detail_status_label"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_detail_date_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="?android:attr/textColorLink"
                android:textSize="16sp"
                android:paddingHorizontal="4dp"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="@id/text_detail_date_label"
                app:layout_constraintBottom_toBottomOf="@id/text_detail_date_label"
                app:layout_constraintStart_toEndOf="@id/text_detail_date_label"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Category -->
            <TextView
                android:id="@+id/text_detail_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Category:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/text_detail_date_value"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_detail_category_value"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Wishlist"
                app:layout_constraintTop_toTopOf="@id/text_detail_category_label"
                app:layout_constraintBottom_toBottomOf="@id/text_detail_category_label"
                app:layout_constraintStart_toEndOf="@id/text_detail_category_label"/>

            <!-- Subtasks -->
            <TextView
                android:id="@+id/text_detail_subtasks_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Subtasks:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/chip_detail_category_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_add_subtask"/>

            <Button
                android:id="@+id/button_add_subtask"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:icon="@drawable/ic_input_add"
                app:layout_constraintTop_toTopOf="@id/text_detail_subtasks_label"
                app:layout_constraintBottom_toBottomOf="@id/text_detail_subtasks_label"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Subtasks Recycler -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_detail_subtasks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="50dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/text_detail_subtasks_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/button_detail_delete_task"
                tools:listitem="@layout/item_subtask"
                tools:itemCount="2"/>

            <!-- Delete Button -->
            <Button
                android:id="@+id/button_detail_delete_task"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Delete Task"
                android:textColor="@android:color/holo_red_dark"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@android:color/holo_red_dark"
                app:strokeColor="@android:color/holo_red_dark"
                app:layout_constraintTop_toBottomOf="@id/recycler_detail_subtasks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Save Changes -->
            <Button
                android:id="@+id/button_detail_save"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Save Changes"
                app:layout_constraintTop_toBottomOf="@id/button_detail_delete_task"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


